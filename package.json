{
  "name": "auto-pdf-scroller",
  "version": "1.0.4",
  "main": "main.js",
  "scripts": {
    "electron": "electron .",
    "build:electron": "electron-builder",
    "web": "vite --host",
    "build:web": "vite build && npm run zip:web",
    "zip:web": "cd dist-web && zip -r auto-pdf-scroller-web-v$npm_package_version.zip * && cd ..",
    "release:patch": "npm version patch && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:major": "npm version major && git push --follow-tags"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "vite": "^7.2.6"
  },
  "build": {
    "productName": "Auto PDF Scroller",
    "appId": "com.playmixel.autopdfscroller",
    "directories": {
      "output": "dist-electron"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  }
}
